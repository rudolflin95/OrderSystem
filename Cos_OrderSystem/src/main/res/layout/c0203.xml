<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/c0203_txt001"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="@string/c0203_txt001" />

    <RadioGroup
        android:id="@+id/c0203_radioBG_Size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <RadioButton
            android:id="@+id/c0203_radioB_SizeSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/c0203_txtRadioB_SizeSmall" />

        <RadioButton
            android:id="@+id/c0203_radioB_SizeLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/c0203_txtRadioB_SizeLarge"/>

    </RadioGroup>

    <TextView
        android:id="@+id/c0203_txt002"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="@string/c0203_txt002" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <RadioGroup
            android:id="@+id/c0203_radioBG_Amount"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:button="@null"
            android:padding="5dp">

            <RadioButton
                android:id="@+id/c0203_amount_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/check_background"
                android:button="@null"
                android:padding="5dp"
                android:text="1"
                android:textAlignment="center" />

            <RadioButton
                android:id="@+id/c0203_amount_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:padding="5dp"
                android:text="2"
                android:textAlignment="center"
                android:background="@drawable/check_background"/>

            <RadioButton
                android:id="@+id/c0203_amount_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:padding="5dp"
                android:text="3"
                android:textAlignment="center"
                android:background="@drawable/check_background"/>

            <RadioButton
                android:id="@+id/c0203_amount_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:padding="5dp"
                android:text="4"
                android:textAlignment="center"
                android:background="@drawable/check_background"/>

            <RadioButton
                android:id="@+id/c0203_amount_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:padding="5dp"
                android:text="5"
                android:textAlignment="center"
                android:background="@drawable/check_background"/>

        </RadioGroup>

        <EditText
            android:id="@+id/c0203_edtxtAmount"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:ems="10"
            android:gravity="center"
            android:inputType="numberDecimal"
            android:padding="5dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/c0203_txt003"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="@string/c0203_txt003" />

    <RadioGroup
        android:id="@+id/c0203_radioBG_Sweetness"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <RadioButton
            android:id="@+id/c0203_txtRadioB_Sweet01"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:padding="5dp"
            android:text="@string/c0203_txtRadioB_Sweet01"
            android:textAlignment="center"
            android:background="@drawable/check_background"
            />

        <RadioButton
            android:id="@+id/c0203_txtRadioB_Sweet02"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:padding="5dp"
            android:text="@string/c0203_txtRadioB_Sweet02"
            android:textAlignment="center"
            android:background="@drawable/check_background"
            />

        <RadioButton
            android:id="@+id/c0203_txtRadioB_Sweet03"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:padding="5dp"
            android:text="@string/c0203_txtRadioB_Sweet03"
            android:textAlignment="center"
            android:background="@drawable/check_background"
            />

        <RadioButton
            android:id="@+id/c0203_txtRadioB_Sweet04"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:padding="5dp"
            android:text="@string/c0203_txtRadioB_Sweet04"
            android:textAlignment="center"
            android:background="@drawable/check_background"
            />

        <RadioButton
            android:id="@+id/c0203_txtRadioB_Sweet05"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:padding="5dp"
            android:text="@string/c0203_txtRadioB_Sweet05"
            android:textAlignment="center"
            android:background="@drawable/check_background"
           />
    </RadioGroup>

    <TextView
        android:id="@+id/c0203_txt004"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="@string/c0203_txt004" />

    <RadioGroup
        android:id="@+id/c0203_radioBG_IceLevel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <RadioButton
            android:id="@+id/c0203_txtRadioB_IceLevel01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:padding="5dp"
            android:text="@string/c0203_txtRadioB_IceLevel01"
            android:textAlignment="center"
            android:background="@drawable/check_background"/>

        <RadioButton
            android:id="@+id/c0203_txtRadioB_IceLevel02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:padding="5dp"
            android:text="@string/c0203_txtRadioB_IceLevel02"
            android:textAlignment="center"
            android:background="@drawable/check_background"/>

        <RadioButton
            android:id="@+id/c0203_txtRadioB_IceLevel03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:padding="5dp"
            android:text="@string/c0203_txtRadioB_IceLevel03"
            android:textAlignment="center"
            android:background="@drawable/check_background"/>

        <RadioButton
            android:id="@+id/c0203_txtRadioB_IceLevel04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:padding="5dp"
            android:text="@string/c0203_txtRadioB_IceLevel04"
            android:textAlignment="center"
            android:background="@drawable/check_background"/>

        <RadioButton
            android:id="@+id/c0203_txtRadioB_IceLevel05"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:padding="5dp"
            android:text="@string/c0203_txtRadioB_IceLevel05"
            android:textAlignment="center"
            android:background="@drawable/check_background"/>

    </RadioGroup>

    <Button
        android:id="@+id/c0203_cart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="@string/c0203_btnNext" />

</LinearLayout>