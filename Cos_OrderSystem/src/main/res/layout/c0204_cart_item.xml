<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:background="@color/pickerview_wheelview_textcolor_divider">

        <TextView
            android:id="@+id/c0204_txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:text="Title"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/c0204_txtAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@+id/c0204_txtTitle"
            android:text="數量"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/c0204_txtCost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@+id/c0204_txtAmount"
            android:text="單價"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/c0204_txtCostAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="30dp"
            android:text="共多少"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/c0204_imgProducts"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="20dp"
            app:srcCompat="@drawable/ic_android" />

        <TextView
            android:id="@+id/c0204_txtDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="55dp"
            android:layout_toEndOf="@+id/c0204_imgProducts"
            android:text="餐點細節"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/c0204_imgEdit"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/c0204_txtCostAll"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="25dp"
            app:srcCompat="@drawable/ic_edit" />

        <ImageView
            android:id="@+id/c0204_imgDel"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/c0204_imgEdit"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="25dp"
            app:srcCompat="@drawable/ic_delete" />
    </RelativeLayout>

</android.support.v7.widget.CardView>